
<div class="main">
	<div class="page-title"><p class="title-text"><%= @name %>さんの投稿一覧</p></div>
	<% if @posts.ids.present? %>
	<% @posts.each do |post| %>
		<div class="content">
			<div class="content-left">
				<div class="content-finished"style="background-image: url(<%= rails_blob_path(post.image) %>) ">
					<div class="content-title"><%= post.title %></div>
				</div>
			</div>
			<div class="content-right">
				<div class="content-created"><%= post.created_at.strftime("%Y年%m月%d日") %>投稿</div>
				<div class="content-name">投稿者：<%= post.user.name %></div>
				<div class="content-intro"><%= post.introduction %></div>
				<% if user_signed_in? %>
				<%= link_to '編集する', edit_post_path(post.id), class: 'to-btn to-edit' %>
				<% end %>
				<%= link_to '詳細へ', post_path(post.id), class: 'to-btn to-show' %>
			</div>
		</div>
	<% end %>
	<% else %>
	<div class="page-title"><p class="title-text">まだ<%= @name %>さんの投稿がありません！作品を投稿して共有しよう。</p></div>
	<% end %>
</div>