<div class="background">
  <div class="sign-container">
  
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br />
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field">
      <%= f.label :password %> <i>(変更する場合は入力してください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div><br />
  
    <div class="field">
      <%= f.label :password_confirmation, '変更パスワードの確認' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div><br />
  
    <div class="field">
      <%= f.label :current_password, '現在のパスワード' %> <i>(変更に必要です）</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div><br />
  
    <div class="actions">
      <%= f.submit "変更する" %>
    </div><br />
  <% end %>
  
  <h3>アカウントの削除</h3>
  
  <p> <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete %></p>
  
  <%= link_to "Back", :back %>
  </div>
  </div>

