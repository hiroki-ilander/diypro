<div class="background">
  <h2 class="sign-title">ログイン</h2>
  <div class="sign-container">
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form">
        <%= f.email_field :email, class: 'form-control', style: "border: none", autofocus: true,placeholder: 'メールアドレス',  autocomplete: "email" %>
      </div>
    
      <div class="form">
        <%= f.password_field :password, class: 'form-control', style: "border: none", placeholder: 'パスワード', autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, id: 'check-box01' %>
          <%= f.label :remember_me, '次回から自動でログインする', id: 'check-box01' %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "ログインする",  class: 'form-control', id: 'btn'  %>
      </div>
    <% end %>

 　<%= render "devise/shared/links" %>
  </div>
</div>
